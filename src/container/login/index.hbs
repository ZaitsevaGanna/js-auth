<div class="page page_background">
    <header>
        <div>{{> back-btn}}</div>
    </header>

    <form action="" class="page_section">
        <h1 class="page_title">Вхід</h1>
        <div class="form">
            <div class="form_item">
                <div>{{>field action='signupForm.change' name='email' label='Ел.пошта' placeholder='Ваш e-mail'
                    type='email' }}</div>
                <span name='email' class="form_error">Помилка</span>

            </div>
            <div class="form_item">
                <div>{{>field-password action='signupForm.change' name='password' label='Пароль'
                    placeholder='Введіть пароль'
                    }}</div>
                <span name='password' class="form_error">Помилка</span>
            </div>


            <button type="button" class="button button_disabled" onclick="signupForm.submit();">Увійти</button>
            <span class="alert alert_disabled">Увага,помилка!</span>
            <span class="link_prefix">Забули пароль?<a href="/recovery" class="link">Відновити</a></span>
        </div>
    </form>
</div>


