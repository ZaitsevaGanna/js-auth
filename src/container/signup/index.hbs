<div class="page page_background">
    <header>
        <div>{{> back-btn}}</div>
    </header>

    <form action="" class="page_section">
        <h1 class="page_title">Реєстрація</h1>
        <div class="form">
            <div class="form_item">
                <div>{{>field action='signupForm.change' name='email' label='Ел.пошта' placeholder='Ваш e-mail'
                    type='email' }}</div>
                <span name='email' class="form_error">Помилка</span>

            </div>
            <div class="form_item">
                <div>{{>field-password action='signupForm.change' name='password' label='Пароль'
                    placeholder='Введіть пароль'
                    }}</div>
                <span name='password' class="form_error">Помилка</span>
            </div>

            <div class="form_item">
                <div>{{>field-password action='signupForm.change' name='passwordAgain' label='Пароль ще раз'
                    placeholder='Введіть пароль'
                    }}</div>
                <span name='passwordAgain' class="form_error">Помилка</span>
            </div>


            <div class="form_item">
                <div>{{>field-select action='signupForm.change' name='role' label='Роль' placeholder='Оберіть роль'
                    list=data.role }}</div>
                <span name='role' class="form_error">Помилка</span>

            </div>
            <div class="form_item">
                <div>{{>field-checkbox action='signupForm.change' name='isConfirm' label='Ви погоджуєтесь з правилами
                    сервису'
                    }}</div>
                <span name='isConfirm' class="form_error">Помилка</span>

            </div>




            <button type="button" class="button button_disabled" onclick="signupForm.submit();">Зареєструватися</button>
            <span class="alert alert_disabled">Увага,помилка!</span>
        </div>
    </form>
</div>


